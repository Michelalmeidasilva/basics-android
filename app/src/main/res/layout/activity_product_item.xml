<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/product_item_name_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:text="Banana"
        android:layout_marginTop="8dp"
        android:id="@+id/product_item_name_value"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/product_item_name_title" />

    <TextView
        android:text="Price"
        android:id="@+id/product_form_price_title"
        android:layout_marginTop="8dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_item_name_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:text="20.00"
        android:id="@+id/product_item_price_value"
        android:layout_marginTop="8dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_item_name_value"
        app:layout_constraintLeft_toRightOf="@id/product_form_price_title" />

    <TextView
        android:text="description"
        android:id="@+id/product_item_description_title"
        android:layout_marginTop="8dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_form_price_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:text="Este produto é top, muito top, bagulho é bom mesmo"
        android:id="@+id/product_item_description_value"
        android:layout_marginTop="8dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_form_price_title"
        app:layout_constraintLeft_toRightOf="@id/product_item_description_title" />


</androidx.constraintlayout.widget.ConstraintLayout>